<Window x:Class="SecurityDatabaseAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Security Database Analyzer"
        Height="650"
        Width="1100"
        WindowStartupLocation="CenterScreen">

    <DockPanel Margin="12">

        <!-- TOP BAR -->
        <Border DockPanel.Dock="Top"
                Padding="10"
                Background="#F3F3F3"
                BorderBrush="#DDDDDD"
                BorderThickness="0,0,0,1">
            <DockPanel>
                <Button Content="Open Database"
                        Width="140"
                        Height="34"
                        Margin="0,0,16,0" />

                <TextBlock Text="No database loaded"
                           VerticalAlignment="Center"
                           Opacity="0.8" />
            </DockPanel>
        </Border>

        <!-- BOTTOM ADMIN MODE STRIP -->
        <Border DockPanel.Dock="Bottom"
                Padding="10"
                Background="#FFF3CD"
                BorderBrush="#FFECB5"
                BorderThickness="1"
                Margin="0,10,0,0">
            <DockPanel>
                <TextBlock Text="ADMIN MODE – DATABASE MODIFICATION ENABLED"
                           FontWeight="Bold"
                           Foreground="#856404"
                           VerticalAlignment="Center" />

                <CheckBox Content="Enable"
                          Margin="16,0,0,0"
                          VerticalAlignment="Center" />
            </DockPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- USERS TABLE -->
            <Border Grid.Column="0"
                    Padding="10"
                    Margin="0,0,8,0"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="6">

                <DockPanel>
                    <TextBlock Text="USERS"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,8" />

                    <DataGrid AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Username" Width="*" />
                            <DataGridTextColumn Header="Failed Attempts" Width="150" />
                            <DataGridCheckBoxColumn Header="Locked" Width="80" />
                            <DataGridTextColumn Header="Created At" Width="160" />
                            <DataGridTextColumn Header="Last Login" Width="160" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <!-- SECURITY INSIGHTS -->
            <Border Grid.Column="1"
                    Padding="10"
                    Margin="8,0,0,0"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="6">

                <StackPanel>
                    <TextBlock Text="SECURITY INSIGHTS"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,12" />

                    <TextBlock Text="Total users: —" Margin="0,4" />
                    <TextBlock Text="Locked users: —" Margin="0,4" />
                    <TextBlock Text="High-risk users: —" Margin="0,4" />

                    <Separator Margin="0,12" />

                    <TextBlock Text="Notes:"
                               FontWeight="Bold"
                               Margin="0,0,0,4" />

                    <TextBlock Text="• Locked accounts may indicate brute-force attempts."
                               TextWrapping="Wrap"
                               Opacity="0.85" />

                    <TextBlock Text="• High failed attempts should be reviewed."
                               TextWrapping="Wrap"
                               Opacity="0.85"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Border>
        </Grid>

    </DockPanel>
</Window>